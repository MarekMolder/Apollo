@model WebApp.ViewModels.ProductCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Unit" class="control-label"></label>
                <input asp-for="Product.Unit" class="form-control" />
                <span asp-validation-for="Product.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Volume" class="control-label"></label>
                <input asp-for="Product.Volume" class="form-control" type="number" step="any" />
                <span asp-validation-for="Product.Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.VolumeUnit" class="control-label"></label>
                <input asp-for="Product.VolumeUnit" class="form-control" />
                <span asp-validation-for="Product.VolumeUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Code" class="control-label"></label>
                <input asp-for="Product.Code" class="form-control" />
                <span asp-validation-for="Product.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" type="number" step="any" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductCategoryId" class="control-label"></label>
                <select asp-for="Product.ProductCategoryId" class="form-control" asp-items="Model.ProductCategorySelectList"></select>
                <span asp-validation-for="Product.ProductCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Product.IsComponent" class="form-check-input" />
                <label asp-for="Product.IsComponent" class="form-check-label"></label>
                <span asp-validation-for="Product.IsComponent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SupplierId" class="control-label"></label>
                <select asp-for="Product.SupplierId" class="form-control" asp-items="Model.SupplierSelectList"></select>
                <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
